learning_styles = ['Visual', 'Auditory', 'Read/Write', 'Kinesthetic']
print("What is your learning style?")
for i, style in enumerate(learning_styles, 1):
    print(f"{i}. {style}")
learning_style = learning_styles[int(input("Enter the number corresponding to your choice: ")) - 1]


learning_capabilities = int(input('Rate your learning capabilities on a scale of 1 to 5: '))
while learning_capabilities not in range(1, 6):
    print("Invalid input. Please enter a number between 1 and 5.")
    learning_capabilities = int(input('Rate your learning capabilities on a scale of 1 to 5: '))


